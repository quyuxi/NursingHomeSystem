<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="server.dao.ElderDao">
  <resultMap id="BaseResultMap" type="server.entity.Elder">
    <id column="id" jdbcType="INTEGER" property="id" />
    <id column="ring_id" jdbcType="INTEGER" property="ringId" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="sex" jdbcType="VARCHAR" property="sex" />
    <result column="birthday" jdbcType="DATE" property="birthday" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
    <result column="Id_card" jdbcType="VARCHAR" property="idCard" />
    <result column="start_time" jdbcType="VARCHAR" property="startTime" />
    <result column="address" jdbcType="VARCHAR" property="address" />
    <result column="n_id" jdbcType="INTEGER" property="nId" />
  </resultMap>


    <select id="selectElderById" resultType="server.entity.Elder">

        SELECT * FROM  Elder
        WHERE id=#{id}

    </select>
  <select id="selectElderList" resultType="server.entity.Elder">
    SELECT * FROM Elder
  </select>


  <delete id="deleteElderById" parameterType="server.entity.ElderKey">
    delete from Elder
    where id = #{id,jdbcType=INTEGER}

  </delete>

  <insert id="createElder" keyColumn="id" keyProperty="id" parameterType="server.entity.Elder" useGeneratedKeys="true">
    insert into Elder (ring_id, `name`, sex, 
      birthday, phone, Id_card, 
      start_time, address, n_id
      )
    values (#{ringId,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR}, #{sex,jdbcType=VARCHAR}, 
      #{birthday,jdbcType=DATE}, #{phone,jdbcType=VARCHAR}, #{idCard,jdbcType=VARCHAR}, 
      #{startTime,jdbcType=VARCHAR}, #{address,jdbcType=VARCHAR}, #{nId,jdbcType=INTEGER}
      )
  </insert>


  <update id="updateElder" parameterType="server.entity.Elder">
    update Elder
    <set>
      <if test="name != null">
        `name` = #{name,jdbcType=VARCHAR},
      </if>
      <if test="sex != null">
        sex = #{sex,jdbcType=VARCHAR},
      </if>
      <if test="birthday != null">
        birthday = #{birthday,jdbcType=DATE},
      </if>
      <if test="phone != null">
        phone = #{phone,jdbcType=VARCHAR},
      </if>
      <if test="idCard != null">
        Id_card = #{idCard,jdbcType=VARCHAR},
      </if>
      <if test="startTime != null">
        start_time = #{startTime,jdbcType=VARCHAR},
      </if>
      <if test="address != null">
        address = #{address,jdbcType=VARCHAR},
      </if>
      <if test="nId != null">
        n_id = #{nId,jdbcType=INTEGER},
      </if>
      <if test="ringId != null">
        ring_id = #{ringId,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>

</mapper>