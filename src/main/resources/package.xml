            <!--管理一组文件的存放位置-->
            <outputDirectory>/</outputDirectory> <!--放在哪-->
            <directory>target</directory><!--源目录-->
            <includes>
                <include>*.jar</include>  <!--代码的jar包-->
            </includes>
        </fileSet>

        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>scripts</directory>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>

